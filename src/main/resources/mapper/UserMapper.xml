<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sicnu.community.dao.mapper.UserMapper">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into User (email, password, phone, schoolEmail) values (#{email}, #{password}, #{phone}, #{schoolEmail})
    </insert>

    <update id="updateUser">
        update User
        set
        updateTime = #{updateTime}
        <if test="nickname != null and nickname != '' ">
            ,nickname = #{nickname}
        </if>
        <if test="email != null and email != '' ">
            ,email = #{email}
        </if>
        <if test="password != null and password != '' ">
            ,password = #{password}
        </if>
        <if test="phone != null and phone != '' ">
            ,phone = #{phone}
        </if>
        <if test="schoolEmail != null and schoolEmail != '' ">
            ,schoolEmail = #{schoolEmail}
        </if>
        <if test="passwordChangeTime != null">
            ,passwordChangeTime = #{passwordChangeTime}
        </if>
        where id = #{id}
    </update>

    <select id="findUserByEmail" resultType="com.sicnu.community.pojo.User">
        select * from User where email = #{email}
    </select>
    <select id="findUserById" resultType="com.sicnu.community.pojo.User">
        select * from User where id = #{id}
    </select>
</mapper>